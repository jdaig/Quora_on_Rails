<%= image_tag("quora_logo.png", id: "quora_logo")%>
<div id="login_credentials">
  <%if @bulean %>
    <p style="color:green, text-align: center">Usuario registrado</p>
    <% @bulean = false %>
  <%end %>
  <%if @bulean2 %>
    <p style="color:red">Logout Efectuado</p>
    <% @bulean2 = false %>
  <%end %>
  <% if @error_message %>
  <%@error_message.each do |message|%>
  <p style="color:red"><%=message%></p>
  <%end%>
  <% end %>
  <b id="welcome_message" style="color:#990000">Inicia Sesión o Regístrate para continuar...</b><br><br>
  <%= form_for :user, url: { controller: 'users', action: "register"} do |f| %>
    <%= f.label :register, style: "color:#990000; font-weight:bold" %><br>
    <%= f.text_field :name, placeholder: "Name"%><br />
    <%= f.text_field :email, placeholder: "Email"%><br>
    <%= f.password_field :password %><br>
    <%= f.submit :"Join us", class: "btn" %>
  <% end %>
  <br>
  <br>
  <%= form_for :user, url: { controller: 'users', action: "login"} do |f| %>
    <%= f.label :"log in", style: "color:#990000; font-weight:bold" %><br>
    <%= f.text_field :email, placeholder: "Email"%><br>
    <%= f.password_field :password %><br>
    <%= f.submit :"Login", class: "btn" %>
  <% end %>
 </div>
